# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Indentation override for all JS files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Indentation override for CSS files
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# Indentation override for JSON files
[*.json]
indent_style = space
indent_size = 2

# Indentation override for YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
